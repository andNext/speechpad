<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.expendables.speechpad"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>

        <activity
            android:name=".TranslateActivity"
            android:label="@string/translate" >
        </activity>
        <activity
            android:name=".LanguageList"
            android:label="@string/title_activity_language_list"
            android:parentActivityName=".TranslateActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.expendables.speechpad.TranslateActivity" />
        </activity>

    </application>

</manifest>
